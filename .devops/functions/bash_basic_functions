  DOCLI_VERBOSE="[[ $DOCLI_ARGS_VERBOSE == 1 || $DOCLI_ARGS_DEBUG == 1 ]]"
  DOCLI_DEBUG="[[ $DOCLI_ARGS_DEBUG == 1 ]]"
